{
  "compilerOptions": {
    "allowUnreachableCode": false,
    "strict": true,
    "alwaysStrict": true,
    "exactOptionalPropertyTypes": true,
    "noImplicitReturns": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "esModuleInterop": true,
    "target": "ES2020"
  },
  "ts-node": {
    "files": true
  },
  "include": [
    "./aoc",
    "./**/*.ts"
  ]
}
